set nocompatible
filetype plugin on

syntax enable
filetype plugin indent on         
set laststatus=2
set nu
set incsearch 
set hlsearch 
set scrolloff=5
set autoindent

au BufRead,BufNewFile *.tex :call MyLatex()
function! MyLatex()
	map <silent>K :!evince main.pdf &<CR><CR>
	map <silent>H :!pdflatex main.tex <CR><CR>
endfunction
